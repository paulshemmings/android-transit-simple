<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="razor_blue">
        <item name="android:background">#E7EBF2</item>
        <item name="android:textColor">#111</item>
    </style>

    <style name="razor_header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#d37b00</item>
    </style>

    <style name="blue_button_text_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="razor_spinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/selector_razor_spinner</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/global_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="razor_spinner_item" parent="@android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/global_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_text">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#fff</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="razor_toast_text">
        <item name="android:textColor">@color/global_text</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>